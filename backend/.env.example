# Copy to .env and adjust as needed
ENV=dev
HOST=0.0.0.0
# If 8080 is blocked on Windows, try 8081.
PORT=8080

# Postgres (Docker Compose)
POSTGRES_USER=pasar
POSTGRES_PASSWORD=pasar
POSTGRES_DB=pasarlokal

# Used by API container (Compose service name "db")
DATABASE_URL=postgres://pasar:pasar@db:5432/pasarlokal?sslmode=disable

# Xendit
# If set, incoming webhooks must include the callback token header.
XENDIT_CALLBACK_TOKEN=

# Xendit secret key for creating invoices
XENDIT_SECRET_KEY=

# Optional: override API base URL (default https://api.xendit.co)
XENDIT_BASE_URL=
